<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/top_bar_color">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/Top_Back" />

        <TextView
            style="@style/Top_Title"
            android:text="智能组卷" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_xk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_height"
                android:background="@color/def_sub_bg"
                android:padding="@dimen/text_padding_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学科"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_xk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawble_padding"
                    android:drawableRight="@mipmap/icon_goto"
                    android:text=""
                    android:textSize="@dimen/text_normal" />
            </RelativeLayout>

            <View style="@style/Line.Hor_margin" />

            <RelativeLayout
                android:id="@+id/rl_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/def_sub_bg"
                android:padding="@dimen/text_padding_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="题量"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_tl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawble_padding"
                    android:drawableRight="@mipmap/icon_goto"
                    android:text="5"
                    android:textSize="@dimen/text_normal" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_gjsz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_jc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/def_sub_bg"
                    android:padding="@dimen/text_padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教材"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_jc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/drawble_padding"
                        android:drawableRight="@mipmap/icon_goto"
                        android:text=""
                        android:textSize="@dimen/text_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_zj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/def_sub_bg"
                    android:padding="@dimen/text_padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="章节"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_zj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="45dp"
                        android:drawablePadding="@dimen/drawble_padding"
                        android:drawableRight="@mipmap/icon_goto"
                        android:text=""
                        android:textSize="@dimen/text_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_zsd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/def_sub_bg"
                    android:padding="@dimen/text_padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="知识点"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_zsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="45dp"
                        android:drawablePadding="@dimen/drawble_padding"
                        android:drawableRight="@mipmap/icon_goto"
                        android:text=""
                        android:textSize="@dimen/text_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/def_sub_bg"
                    android:padding="@dimen/text_padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="题型"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="45dp"
                        android:drawablePadding="@dimen/drawble_padding"
                        android:drawableRight="@mipmap/icon_goto"
                        android:text=""
                        android:textSize="@dimen/text_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_nd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/def_sub_bg"
                    android:padding="@dimen/text_padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="难度"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/drawble_padding"
                        android:drawableRight="@mipmap/icon_goto"
                        android:text=""
                        android:textSize="@dimen/text_normal" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sz_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_padding_normal"
                android:drawablePadding="@dimen/drawble_padding"
                android:drawableRight="@mipmap/ct_9"
                android:gravity="right"
                android:text="高级设置"
                android:textColor="@color/text_red" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_btn_height"
                android:layout_marginLeft="@dimen/big_btn_margin_l_r"
                android:layout_marginRight="@dimen/big_btn_margin_l_r"
                android:layout_marginTop="50dp"
                android:background="@drawable/round_blue_background"
                android:text="生成试卷"
                android:textColor="@color/text_white"
                android:textSize="@dimen/big_btn_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>