<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/def_sub_bg"
        android:paddingBottom="@dimen/text_title_padding_t_b"
        android:paddingLeft="@dimen/text_padding_normal"
        android:paddingRight="@dimen/text_padding_normal"
        android:paddingTop="@dimen/text_title_padding_t_b">

        <TextView
            android:id="@+id/tv_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/sy_39"
            android:drawablePadding="@dimen/drawble_padding"
            android:gravity="center_vertical"
            android:text="拼音拼写"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/tv_result_right_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/sy_40"
            android:drawablePadding="@dimen/drawble_padding"
            android:text="2/20" />
    </RelativeLayout>

    <View style="@style/Line.Hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/def_sub_bg"
        android:padding="@dimen/padding_normal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_result_my_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sy_44"
                android:textColor="@color/text_white"
                android:textSize="@dimen/homework_result_text"
                android:text="70%"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_samll"
                android:text="正确率"
                android:textColor="@color/text_gray_q"
                android:textSize="@dimen/text_small" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_result_class_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sy_44"
                android:textColor="@color/text_white"
                android:textSize="@dimen/homework_result_text"
                android:textStyle="bold"
                android:text="100.0%"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_samll"
                android:text="全班"
                android:textColor="@color/text_gray_q"
                android:textSize="@dimen/text_small" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_result_all_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sy_44"
                android:textColor="@color/text_white"
                android:textSize="@dimen/homework_result_text"
                android:text="70%"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_samll"
                android:text="全部"
                android:textColor="@color/text_gray_q"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>