<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_sub_bg"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/topic_answer_title_text"
            android:drawableLeft="@mipmap/sy_33"
            android:drawablePadding="@dimen/drawble_padding"
            android:layout_marginLeft="@dimen/topic_margin"
            android:gravity="center"
            android:layout_marginTop="@dimen/topic_margin"
            android:text="扣分分数"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <cn.qqtheme.framework.widget.WheelView
                android:id="@+id/wheel_line"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="10dp" />

            <cn.qqtheme.framework.widget.WheelView
                android:id="@+id/wheel_section"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            >
            <View
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_blue_select_alpha"
                android:padding="10dp" />

            <View
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/bg_blue_select_alpha"
                android:padding="10dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>