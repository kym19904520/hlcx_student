<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="27sp"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:text="注册成功！"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:text="绑定学生，接收老师布置的作业"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/def_sub_bg"
        android:padding="@dimen/text_padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生姓名"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/et_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ems="13"
            android:hint="请输入学生姓名"
            android:gravity="right"
            android:textColorHint="@color/text_hint"
            android:background="@android:color/transparent"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_text_size"
            />
    </RelativeLayout>
    <View style="@style/Line.Hor_margin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/def_sub_bg"
        android:padding="@dimen/text_padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/et_scode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ems="13"
            android:hint="请输入学号"
            android:gravity="right"
            android:textColorHint="@color/text_hint"
            android:background="@android:color/transparent"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_text_size"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/def_sub_bg"
        android:padding="@dimen/text_padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级邀请码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/et_ccode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="请输入班级邀请码"
            android:gravity="right"
            android:ems="13"
            android:textColorHint="@color/text_hint"
            android:background="@android:color/transparent"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_text_size"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_forget_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_btn_margin_l_r"
        android:layout_marginRight="@dimen/big_btn_margin_l_r"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="没有班级邀请码的可不填写"
        android:textColor="@color/line_pink"
        android:textSize="@dimen/text_normal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_finish"
            android:layout_width="130dp"
            android:layout_height="@dimen/big_btn_height"
            android:background="@drawable/round_blue_background"
            android:layout_marginLeft="@dimen/big_btn_margin_l_r"
            android:layout_marginRight="@dimen/big_btn_margin_l_r"
            android:layout_marginTop="30dp"
            android:text="立即绑定"
            android:textColor="@color/text_white"
            android:textSize="@dimen/big_btn_text_size" />

        <Button
            android:id="@+id/btn_ranp"
            android:layout_width="130dp"
            android:layout_height="@dimen/big_btn_height"
            android:background="@drawable/round_blue_background"
            android:layout_marginLeft="@dimen/big_btn_margin_l_r"
            android:layout_marginRight="@dimen/big_btn_margin_l_r"
            android:layout_marginTop="30dp"
            android:text="跳过"
            android:textColor="@color/text_white"
            android:textSize="@dimen/big_btn_text_size" />

    </LinearLayout>


</LinearLayout>